实验题1***********************************************************************************************************************************************

#define _CRT_SECURE_NO_WARNINGS

#include<stdio.h>
int main()
{
    int n;
    int s=0;
    scanf("%d",&n);
    while(n!=0)
    {
       s+=n;
       n--;
    }
    printf("%d",n);
    return 0;
}

#include<stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    printf("%d",n*(n+1)/2);
    return 0;
}

实验题2***************************************************************************************************************************************************
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<math.h>

int main()
{
	int n = 0;
	scanf("%d", &n);
	int m = n;
	double t ;
	t = sqrt(n);//求根号,根号是一个浮点数
	int k = 1;
	while (n != 1)//我们求n的阶乘
	{
		k *= n;
		n--;
	}
	n = m;
	int mul=1;
	while (n != 0)//这里用来表示2的n次方
	{
		mul = mul * 2;
		n--;
	}
	n = m;
	double s = log2(n);//log2(n)的值是一个浮点数，不是整数，不能整数打印
	printf("%f\t%f\t%d\t%d\t%d\t%d\t%d\t%d\t", s,t,n,n*s,n*n,n*n*n,mul,k);//s是log2(n),t是根号n,
	return 0;

}

实验题3****************************************************************************************************************************************************
#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<math.h>
第一种

int main()
{
	int n = 0,k=0;
	scanf("%d", &n);
	for (int i = 2; i < n; i++)
	{
		if (n % i == 0)
		{
			k = 1;
			printf("n是素数");
			break;
		}
	}
	if (k == 0)
	{
		printf("n不是素数");
	}

第二种
int main()
{
	int n;
	int k = 0;
	scanf("%d", &n);
	for (int i = sqrt(n); i > 1; i--)
	{
		if (n % i == 0)
		{
			k = 1;
			printf("n是素数");
			break;
		}
	}
	if (k == 0)
	{
		printf("n不是素数");
	}
	return 0;
}
